@model EditUserVM
@{
    ViewData["Title"] = "Edit";
}

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="~/assets/images/breadcrumb/bg/1-1-1919x388.jpg"
         style="background: url(assets/images/breadcrumb/bg/1-1-1919x388.jpg)"
         >
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Edit Account Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Edit account</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label>First Name</label>
                                    <input asp-for="Firstname" placeholder="First Name" /><br />
                                    <span asp-validation-for="Firstname" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label>Last Name</label>
                                    <input asp-for="Lastname" placeholder="Last Name" /><br />
                                    <span asp-validation-for="Lastname" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Email Address*</label>
                                    <input asp-for="Email" placeholder="Email Address" readonly /><br />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Username*</label>
                                    <input asp-for="Username" placeholder="Username" /><br />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Current Password</label>
                                    <input asp-for="CurrentPassword" placeholder="Password" /><br />
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>New Password</label>
                                    <input asp-for="Password" placeholder="Password" /><br />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Confirm New Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" /><br />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Edit account
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->

